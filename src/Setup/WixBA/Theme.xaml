<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- TODO Wix-devs Need to decide on font. Currently only used for the title.  Other controls use the WPF defaults, unless we want to specify something. -->
    <FontFamily x:Key="FontFamily">Gabriola, Constantia, Tahoma, Segoe UI, Arial</FontFamily>

    <!-- Brushes -->

    <SolidColorBrush x:Key="ThemedButtonBackgroundBrush" Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}" po:Freeze="True" />
    <SolidColorBrush x:Key="ThemedBackgroundBrush" Color="{DynamicResource {x:Static SystemColors.WindowColorKey}}" po:Freeze="True" />
    <SolidColorBrush x:Key="HighContrastBackgroundBrush" Color="{DynamicResource {x:Static SystemColors.DesktopColorKey}}" po:Freeze="True" />

    <!-- Font Sizes -->
    <System:Double x:Key="FontSizeMedium">12</System:Double>
    <System:Double x:Key="FontSizeButton">14</System:Double>

    

</ResourceDictionary>
